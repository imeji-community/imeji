<span id="metaMenuSkipLinkAnchor" class="full_area0 metaMenu">
	<!-- meta Menu starts here -->

	<!-- Language -->
	<h:selectOneMenu value="#{Internationalization.currentLanguage}" onchange="submit(); return false;" rendered="true">
		<f:selectItems value="#{Internationalization.internationalizedLanguages}"/>
	</h:selectOneMenu>


	
	<h:panelGroup styleClass="seperator"></h:panelGroup>
	<!-- Help -->
	<h:outputLink id="lnkHelp" styleClass="medium_area0_p8 endline" value="#{Navigation.helpUrl}" target="_blank">
		<h:outputText value="#{lbl.help}"/>
	</h:outputLink>
	<h:panelGroup styleClass="seperator"></h:panelGroup>

	<!-- LogIn, LogOut -->
	<h:panelGroup rendered="#{SessionBean.user == null}" styleClass="free_area0_p4">
		<h:inputText styleClass="medium_txtInput" value="#{LoginBean.login}"/>
		<h:inputSecret styleClass="medium_txtInput" value="#{LoginBean.passwd}" onkeypress="return loginOnEnter(event)"/>
		<h:commandButton id="lnkLogin" styleClass="medium_area0 endline" style="text-align:left;" value="#{lbl.login}" action ="#{LoginBean.login}"/>
	</h:panelGroup>
	

	<h:commandLink id="lnkLogout" action ="#{LoginBean.logout}" styleClass="medium_area0_p8 endline" rendered="#{SessionBean.user != null}">
    	<h:outputText value="#{lbl.logout}"></h:outputText>
    </h:commandLink>

	<h:panelGroup styleClass="seperator"></h:panelGroup>

	<h:outputLink id="txtAccountUserName" styleClass="free_area0_p8 endline" value="#{Navigation.applicationUrl}user?id=#{SessionBean.user.email}" rendered="#{SessionBean.user != null}">
		<h:outputText  value="#{SessionBean.user.name}"/>
	</h:outputLink>
	
	<!-- meta Menu ends here -->
</span>
	<script type="text/javascript">
		function loginOnEnter(event)
		{
			if (event.keyCode == 13)
			{
				document.getElementById('formular:Header:lnkLogin').click();
			}
		}
	</script>
</div>
